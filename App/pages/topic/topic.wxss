@import "../../components/live/live.wxss";

page {
  background-color: #fbf7ed;
}

.header {
  color: #fff;
  position: relative;
  margin-bottom: 20rpx;
}

.header image {
  height: 400rpx;
  vertical-align: bottom;
}

.header .title {
  position: absolute;
  z-index: 5;
  left: 30rpx;
  bottom: 50rpx;
}

.header .h2 {
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.header .detail {
  color: rgba(255, 255, 255, 0.8);
  font-size: 22rpx;
}

.header .mask {
  position: absolute;
  z-index: 1;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background-image: linear-gradient(to top, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0));
}

m-live::before {
  border-radius: 8rpx;
}
